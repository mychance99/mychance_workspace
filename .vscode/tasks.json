{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C_Lang abc compile",
        "command": "C:\\MinGW\\bin\\gcc.exe",
        "args": [
          //"-fdiagnostics-color=always",
          "-g",
          "-Wall",
          "${workspaceFolder}/C_Lang/abc/src/*.c",
          "-o",
          "${workspaceFolder}/C_Lang/abc/abc.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}/C_Lang/abc"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "컴파일러: C:\\MinGW\\bin\\gcc.exe"
      },
      {
        "type": "shell",
        "label": "MELTSPREAD SAMPLE compile",
        "command": "gfortran",
        "args": [
          "-g",
          //"-ffpe-trap=zero,invalid,overflow,underflow",
          "${workspaceFolder}/Fortran/MELTSPREAD3.0/src/*.f",
          "-o",
          "${workspaceFolder}/Fortran/MELTSPREAD3.0/SAMPLE/SAMPLE.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}/Fortran/MELTSPREAD3.0"
        },
        "group": "build"
      },
      {
        "type": "shell",
        "label": "SPREADTEST15 compile",
        "command": "gfortran",
        "args": [
          "-g",
          //"-ffpe-trap=zero,invalid,overflow,underflow",
          "${workspaceFolder}/Fortran/MELTSPREAD3.0/src/*.f",
          "-o",
          "${workspaceFolder}/Fortran/MELTSPREAD3.0/SPREADTEST15/SPREADTEST15.exe"
        ],
        "options": {
          "cwd": "${workspaceFolder}/Fortran/MELTSPREAD3.0"
        },
        "group": "build"
      }
    ]
  }