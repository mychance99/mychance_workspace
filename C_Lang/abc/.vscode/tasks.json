{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "gcc compile",
			"command": "C:\\MinGW\\bin\\gcc.exe",
			"args": [
				//"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"${workspaceFolder}/src/*.c",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "컴파일러: C:\\MinGW\\bin\\gcc.exe"
		}
	]
}